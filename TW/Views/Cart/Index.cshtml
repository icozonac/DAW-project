@model IEnumerable<Product>

@if (Model.Count() > 0)
{
	<form method="post">
		<div class="container mt-4">
			<div class="card">
				<div class="card-header bg-dark text-light">
					<i class="fa fa-shopping-cart"></i>
					Shopping Cart
					<a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm float-end">Continue Shopping</a>
				</div>
				<div class="card-body">
					<div class="row text-muted">
						<div class="col-md-2"></div>
						<div class="col-12 col-md-7">Product Details</div>
						<div class="col-12 col-md-2">Price per sqft</div>
						<div class="col-6 col-sm-4 col-md-1"></div>
					</div>
					<hr/>

					@foreach (var obj in Model)
					{
						<div class="row align-items-center mt-3">
							<div class="col-md-2 text-center">
								<img src="@WC.ImagePath@obj.Image" class="img-fluid rounded" alt="Product Image">
							</div>
							<div class="col-md-7">
								<h5>@obj.Name</h5>
								<p class="text-muted">@obj.ShortDescription</p>
							</div>
							<div class="col-md-2">
								<p class="fw-bold">@obj.Price.ToString("c")/ sqft</p>
							</div>
							<div class="col-md-1 text-end">
								<a asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger">
									<i class="fas fa-trash"></i>
								</a>
							</div>
						</div>
						<hr/>
					}
				</div>
				<div class="card-footer">
					<div class="row">
						<div class="col-md-3 offset-md-9">
							<button type="submit" class="btn btn-success w-100">
								Continue
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
}
else
{
	<div class="container mt-4">
		<div class="card">
			<div class="card-header bg-dark text-light">
				<i class="fa fa-shopping-cart"></i>
				Shopping Cart
				<a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm float-end">Continue Shopping</a>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-12 text-center">
						<h3>Your cart is empty</h3>
					</div>
				</div>
			</div>
		</div>
	</div>
}