<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
	<!-- Card -->
	<div class="card bg-white rounded shadow-sm h-100">
		<div class="card-body p-3">
			<div class="d-flex justify-content-between">
				<h3 class="text-dark">@Model.Name</h3>
				<span class="text-danger h5">@Model.Price.ToString("c")</span>
			</div>
			<img class="card-img-top img-fluid mx-auto my-3 rounded" src="@WC.ImagePath@Model.Image" alt="Card Image">
			<div class="row">
				<div class="col-6">
					<span class="badge bg-lavenderblush text-dark w-100">@Model.Category.Name</span>
				</div>
				<div class="col-6">
					<span class="badge bg-aliceblue text-dark w-100">@Model.ApplicationType.Name</span>
				</div>
			</div>
			<p class="mt-2">@Model.ShortDescription</p>
		</div>
		<div class="card-footer">
			<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark btn-sm w-100 py-2">View Details</a>
		</div>
	</div>
</div>