@model TW.Models.ViewModels.DetailsVM

<div class="container mt-4">
	<form method="post">
		<input type="hidden" asp-for="Product.Id" />
		<div class="card border-dark">
			<div class="card-header bg-dark text-light">
				<div class="row">
					<div class="col-md-6">
						<h1>@Model.Product.Name</h1>
					</div>
					<div class="col-md-6 text-md-end">
						<h1 class="text-warning">@Model.Product.Price.ToString("c")</h1>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-md-4 p-1 text-center">
							<img src="@WC.ImagePath/@Model.Product.Image" class="img-fluid rounded" alt="Product Image"/>
						</div>
						<div class="col-md-8">
							<div class="row">
								<div class="col-md-12">
									<span class="badge bg-lavenderblush text-dark">@Model.Product.Category.Name</span>
									<span class="badge bg-azure text-dark">@Model.Product.ApplicationType.Name</span>
									<h3 class="text-success"></h3>
									<p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer bg-dark">
				<div class="row">
					<div class="col-md-6 pb-1">
						<a asp-action="Index" class="btn btn-success btn-lg btn-block w-100">Back to List</a>
					</div>
					<div class="col-md-6">
						@if (Model.ExistsInCart)
						{
							<a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-lg btn-block w-100">Remove from Cart</a>
						}
						else
						{
							<button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info btn-lg text-white btn-block w-100">Add to Cart</button>
						}
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
